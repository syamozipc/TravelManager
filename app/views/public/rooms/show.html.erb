<% @entries.each do |e| %>
    <% if current_user != e.user %>
        <h2 class="page-title"><%= e.user.name %>さんとのDM</h2>
    <% end %>
<% end %>
<div class="row">
    <div class="col-md-6 col-md-offset-3">

    <table class="table">
        <tbody>
            <% if @messages.present? %>
                <% @messages.each do |m| %>
                <tr>
                    <td>
                        <%= attachment_image_tag m.user, :image, :fill, 30, 30, format: "jpeg", fallback: "no_image.png", size: "30x30", class: "profile-image" %>
                        <%= m.content %>
                    </td>
                    <td><%= m.created_at.strftime("%m/%d %H:%M")%></td>
                </tr>
                 <% end %>
            <% else %>
                <h4>メッセージはまだありません</h4>
            <% end %>
        </tbody>
    </table>


    <%= form_for @message do |f| %>
        <%= f.text_field :content, placeholder: "メッセージを入力して下さい" , size: 70 %>
        <%= f.hidden_field :room_id, value: @room.id %>
        <br>
        <%= f.submit "投稿する", class: "green button" %>
        
        <% @entries.each do |e| %>
        <% if current_user != e.user %>
            <%= link_to e.user.name + "さんのページへ", user_path(e.user), class: "blue button chat-show-button" %>
        <% end %>
    <% end %>
    <% end %>
    </div>
</div>