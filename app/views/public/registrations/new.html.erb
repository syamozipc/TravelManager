<div class="row">
  <div class="col-md-4 col-md-offset-4">

  <h2>新規登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
    <table class="table">
      <tbody>

        <tr>
          <td><%= f.label :ユーザー名 %></td>
          <td><%= f.text_field :name, autofocus: true %></td>
        </tr>

        <tr>
          <td><%= f.label :メールアドレス %></td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </tr>

        <tr>
          <td>
              <%= f.label :パスワード %>
              <% if @minimum_password_length %>
              （<%= @minimum_password_length %>文字以上）
              <% end %><br />
          </td>
          <td><%= f.password_field :password, autocomplete: "new-password" %></td>
        </tr>

        <tr>
          <td><%= f.label :パスワード %>（確認用）</td>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
        </tr>

        <tr>
          <td colspan="2"><%= f.submit "新規登録", class: "green button" %></td>
        </tr>
      </tbody>
    </table>
  <% end %>

  <%= link_to user_facebook_omniauth_authorize_path, class: "blue button" do %>
    <i class="fab fa-facebook"></i>
    <span>FACEBOOKで登録</span>
  <% end %>
  <%= link_to user_google_oauth2_omniauth_authorize_path, class: "orange button" do %>
    <i class="fab fa-google"></i>
    <span>Googleで登録</span>
  <% end %>

  </div>
</div>
