<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  <table class="table">
    <tbody>

      <tr>
        <td><%= f.label :ユーザー名 %></td>
        <td><%= f.text_field :name, autofocus: true %></td>
      </tr>

      <tr>
        <td><%= f.label :メールアドレス %></td>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
      </tr>

      <tr>
        <td>
            <%= f.label :パスワード %>
            <% if @minimum_password_length %>
            （<%= @minimum_password_length %>文字以上）
            <% end %><br />
        </td>
        <td><%= f.password_field :password, autocomplete: "new-password" %></td>
      </tr>

      <tr>
        <td><%= f.label :パスワード %>（確認用）</td>
        <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
      </tr>

      <tr>
        <td colspan="2"><%= f.submit "新規登録", class: "btn btn-success" %></td>
      </tr>
    </tbody>
  </table>

  <p><%= link_to "登録済みの方はこちら", new_user_session_path %></p>


<% end %>
