<div class="container-fruid">
  <div class="row">
    <div class="col-md-4 col-md-offset-4 centerize col-xs-12">

    <h2 class="page-title">新規登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
      <table class="table">
        <tbody>

          <tr>
            <td><%= f.label :ユーザー名 %></td>
            <td><%= f.text_field :name, autofocus: true %></td>
          </tr>

          <tr>
            <td><%= f.label :メールアドレス %></td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>

          <tr>
            <td>
                <%= f.label :パスワード %>
                <% if @minimum_password_length %>
                （<%= @minimum_password_length %>文字以上）
                <% end %><br />
            </td>
            <td><%= f.password_field :password, autocomplete: "new-password" %></td>
          </tr>

          <tr>
            <td><%= f.label :パスワード %>（確認用）</td>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
          </tr>

          <tr>
            <td colspan="2"><%= f.submit class: "btn btn-success" %></td>
          </tr>
        </tbody>
      </table>
    <% end %>
    </div>
  </div>

  <div class="centerize">
    <%= link_to "ゲストログイン", users_guest_path, method: :post, class: "btn btn-warning sns-button" %>
    <%= link_to user_facebook_omniauth_authorize_path, class: "btn btn-primary sns-button" do %>
      <i class="fab fa-facebook"></i>
      <span>FACEBOOKで登録</span>
    <% end %>
    <%= link_to user_google_oauth2_omniauth_authorize_path, class: "btn btn-danger sns-button" do %>
      <i class="fab fa-google"></i>
      <span>Googleで登録</span>
    <% end %>
  </div>
</div>
