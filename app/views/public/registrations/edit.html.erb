<h2 class="page-title">パスワード変更</h2>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
      <table class="table">
        <tbody>

          <tr>
            <td><%= f.label :メールアドレス %></td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>

          <tr>
            <td><%= f.label :current_password, "現在のパスワード" %></td>
            <td><%= f.password_field :current_password, autocomplete: "current-password" %></td>
          </tr>

          <tr>
            <td>
                <%= f.label :新しいパスワード %>
                <% if @minimum_password_length %>
                （<%= @minimum_password_length %>文字以上）
                <% end %><br />
            </td>
            <td><%= f.password_field :password, autocomplete: "new-password" %></td>
          </tr>

          <tr>
            <td><%= f.label :新しいパスワード %>（確認用）</td>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
          </tr>

          <tr>
            <td colspan="2"><%= f.submit "パスワード変更", class: "green button" %></td>
          </tr>
        </tbody>
      </table>
    <% end %>
  </div>
</div>