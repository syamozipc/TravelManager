<% if user_signed_in? %>
	<% if album.liked_by?(current_user) %>
		<%= link_to album_likes_path(album), method: :delete, remote: true, class: "like-button" do %>
			<i class="fas fa-heart"></i>
		<% end %>
	<% else %>
		<%= link_to album_likes_path(album), method: :post, remote: true, class: "like-button" do %>
			<i class="fa fa-heart-o"></i>
		<% end %>
	<% end %>
<% else %>
	<%= link_to user_session_path, class: "like-button", data:{confirm: "ログインが必要な機能です。ログイン画面を表示しますか？"}  do%>
		<i class="fa fa-heart-o"></i>
	<% end %>
<% end %>