<table class="table">
	<p>コメント一覧（降順）</p>
	<% comments.each do |comment| %>
	<tr>
		<td>
			<%= link_to user_path(comment.user) do %>
				<%= attachment_image_tag comment.user, :image, :fill, 30, 30, format: "jpeg", fallback: "no_image.png", size: "30x30", class: "profile-image" %>
			<% end %>
		</td>
		<td>
			<%= link_to comment.user.name, user_path(comment.user) %><br>
			<%= comment.content %><br>
			<span class="time-text">
				<%= time_ago_in_words(comment.created_at) %> ago
				<% if comment.user == current_user %>
					<%= link_to "削除", album_comment_path(comment.album_id, comment), method: :delete, remote: true %>
				<% end %>
			</span>
		</td>
	</tr>
	<% end %>
</table>