<%= link_to "+", new_album_path, class: "new-button" %>

<h2 class="page-title"><%= @user.name %>さんのページ</h2>

<div class=flex>
	<div>
		<div class="follow_<%= @user.id %>">
			<%= render 'public/users/user', user: @user %>
		</div>
		<div class="chat-button">
			<% if @user != current_user %>
				<% if @isRoom == true %>
					<%= link_to "チャットへ", room_path(@roomId),class: "orange button" %>
				<% else %>
					<%= form_for @room do |f| %>
						<%= fields_for @entry do |e| %>
					 		<%= e.hidden_field :user_id, value: @user.id %>
					 	<% end %>
					 	<%= f.submit "チャットへ", class: "orange button" %>
					<% end %>
				<% end %>
			<% end %>
		</div>
	</div>

	<div class="album-box">
		<% @albums.each do |album| %>
			<%= render 'public/albums/album', album: album %>
		<% end %>
	</div>
</div>