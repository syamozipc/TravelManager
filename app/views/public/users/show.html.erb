<div class="row">
	<div class="col-xs-4">
		<table class="table">
			<tbody>
				<tr>
					<td><%= attachment_image_tag @user, :image, size: "100x100", format: "jpeg", fallback: "no_image.png" %></td>
					<td>
						<%= @user.name %>
						<% if @user.is_active == true %>
							（会員No.<%= @user.id %>）
						<% else %>
							退会済み
						<% end %>
					</td>
				</tr>
				<% if current_user != @user %>
					<% if @user.followed_by?(current_user) %>
						<tr>
							<td><%= link_to "フォロー済み", user_relationships_path(@user), method: :delete %></td>
						</tr>
					<% else %>
						<tr>
							<td><%= link_to "フォローする", user_relationships_path(@user), method: :post %></td>
						</tr>
					<% end %>
				<% end %>
				<tr>
					<td><%= link_to "フォロー", follows_user_path(@user) %></td>
				</tr>
				<tr>
					<td><%= link_to "フォロワー", followers_user_path(@user) %></td>
				</tr>
				<tr>
					<td><%= @user.introduction %></td>
				</tr>
				<% if @user == current_user %>
				<tr>
					<td><%= link_to "編集", edit_user_path(@user), class: "btn btn-success" %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>

	<div class="col-xs-8">
		<table class="table">
			<tbody>
				<h4>アルバム <%= @albums.count %>件 <%= link_to "+", new_album_path, class: "new-btn" %></h4>
				<% @albums.each do |album| %>
				<tr>
					<td><%= link_to album.title, album_path(album) %></td>
					<td>
						<i class="far fa-images"></i>
						<%= album.photos.count %>
					</td>
					<td>
						<i class="far fa-comment-dots"></i>
						<%= album.comments.count %>
					</td>
					<td>
						<% if album.liked_by?(current_user) %>
							<%= link_to album_likes_path(album), method: :delete do %>
							<i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
							<%= album.likes.count %>
							<% end %>
						<% else %>
							<%= link_to album_likes_path(album), method: :post do %>
							<i class="fa fa-heart-o" aria-hidden="true"></i>
							<%= album.likes.count %>
							<% end %>
						<% end %>
					</td>
					<td>
						<% if album.range == "closed" %>
							非公開
						<% else %>
							公開中
						<% end %>
					</td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>