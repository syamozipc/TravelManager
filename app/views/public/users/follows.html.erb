<div class="row">
<h4>フォロー一覧</h4>
	<table class="table">
	<% @users.each do |user| %>
		<tr>
			<td><%= link_to user.name, user_path(user) %></td>
			<td><%= user.albums.count %>件のアルバム</td>
			<% if current_user =! user %>
				<% if user.followed_by?(current_user) %>
						<td><%= link_to "フォロー済み", user_relationships_path(user), method: :delete %></td>
				<% else %>
						<td><%= link_to "フォロー", user_relationships_path(user), method: :post %></td>
				<% end %>
			<% end %>
		</tr>
	<% end %>
	</table>
</div>