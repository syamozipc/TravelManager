<h2 class="page-title">通知一覧</h2>
<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<% if @notifications.exists? %>
			<% @notifications.each do |notification| %>
				<hr><%= render 'notification', notification: notification %><br>
			<% end %>
			<% paginate @notifications %>
		<% else %>
			<h3>通知はありません</h3>
		<% end %>
	</div>
</div>