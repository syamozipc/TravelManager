<div class="row">
  <div class="col-md-4 col-md-offset-4 centerize">

  <h2 class="page-title">ログイン</h2>

  <%= flash[:error] %>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <table class="table">
      <tbody>

        <tr>
          <td><%= f.label :メールアドレス %></td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </tr>

        <tr>
          <td>
              <%= f.label :パスワード %>
          </td>
          <td><%= f.password_field :password, autocomplete: "current-password" %></td>
        </tr>

        <tr>
          <td colspan="2"><%= f.submit "ログイン", class: "btn btn-primary" %></td>
        </tr>
      </tbody>
    </table>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :情報を保存する %>
      </div><br>
    <% end %>

  <% end %>
  </div>
</div>

<div class="centerize">
  <%= link_to user_facebook_omniauth_authorize_path, class: "btn btn-primary" do %>
    <i class="fab fa-facebook"></i>
    <span>FACEBOOKでログイン</span>
  <% end %>
  <%= link_to user_google_oauth2_omniauth_authorize_path, class: "btn btn-danger" do %>
    <i class="fab fa-google"></i>
    <span>Googleでログイン</span>
  <% end %>
  <%= link_to "ゲストログイン", users_guest_path, method: :post, class: "btn btn-warning" %>
</div>


