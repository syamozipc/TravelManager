<h4 class="album-title"><%= album.title %></h4>
<div class="icon-box">
	<span class="icon white-color">
		<i class="far fa-images"></i>
		<%= album.photos.count %>
	</span>
	<span class="icon white-color">
		<i class="far fa-comment-dots"></i>
		<%= album.comments.count %>
	</span>
	<span class="icon red-color">
		<i class="fas fa-heart"></i>
		<%= album.likes.count %>
	</span>
</div>
<div>
	<% if album.user == current_user %>
		<% if album.range == "open" %>
			<p class="range-icon white-color"><i class="fas fa-check green-color"></i>公開中</p>
		<% else %>
			<p class="range-icon white-color"><i class="fas fa-lock gold-color"></i>非公開</p>
		<% end %>
	<% else %>
		<h4 class="album-user white-color">by <%= album.user.name %></h4>
	<% end %>
</div>